@model CaldwellHotels.Models.Room

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomFloor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomFloor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomAccessible)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomAccessible)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StyleID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomStyle.StyleID)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Administrator")) //Show option if user is admin
    {
        <a asp-action="Edit" asp-route-id="@Model.RoomID">Edit</a>
        <p class="d-inline">|</p>//Forces inline symbol, rather than block
    }
    <a asp-action="Index">Back to List</a>

</div>
