@model IEnumerable<CaldwellHotels.Models.Person>

@{
    ViewData["Title"] = "People Explorer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>People Explorer</h1>
@if (User.IsInRole("Administrator") || User.IsInRole("Employee")) { 
<p>
    <a asp-action="Create">Create New</a>
</p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @if (User.IsInRole("Administrator") || User.IsInRole("Employee")) //Show option if user is admin
                {
                    <a asp-action="Edit" asp-route-id="@item.PersonID">Edit</a>
                    <p class="d-inline">|</p>   //Forces inline symbol, rather than block
                }

                <a asp-action="Details" asp-route-id="@item.PersonID">Details</a>

                @if (User.IsInRole("Administrator") || User.IsInRole("Employee")) //Show option if user is admin
                {
                    <p class="d-inline" >|</p>  //Forces inline symbol, rather than block
                    <a asp-action="Delete" asp-route-id="@item.PersonID">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
